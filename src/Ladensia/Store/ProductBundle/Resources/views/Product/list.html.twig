{% extends 'LadensiaStoreWebshopBundle:Default:index.html.twig' %}

{% block style %}
    <style>
    #accordion_resizer ul li p, h3{
        width: 99% !important;
    }
    </style>
{% endblock %}

{% block slider %}{% endblock %}

{% block right_column %}
<div class="right_column">
    {% if products %}
        <div class="products">
                <ul>
                    {% for product in products %}
                    <li class="relative">
                        <img src="/uploads/thumbnails/{{ product.image }}" alt="{{ product.name }}" class="product_pic" />
                        <div class="absolute_buy">
                            <h3>{{ product.name }}</h3>
                            <p class="grey">{{ product.featuredDescription|raw }}
                                <a href="{{ path('LadensiaStoreCartBundle_show_cart', {'productId' : product.id}) }}"></a>
                            </p>
                            {# <p><button class="flt_right button_buy" value="{{ product.id }}"></button></p> #}
                            <p class="buy"><span class="price">{{ product.price }}â‚¬</span>                      
                            {# <a href="{{ path('LadensiaStoreProductBundle_product_detail', { 'product_uuid' : product.uuid }) }}"><img src="{{ asset('/bundles/ladensiastorewebshop/images/arrow_orange2.gif') }}" alt="arrow" /> Details</a> #}
                            <span class="flt_right button_buy">
                                <a href="{{ path('LadensiaStoreProductBundle_product_detail', { 'product_uuid' : product.uuid }) }}" class="flt_left"> Details</a>
                                <a href="/#{{ product.id }}" class="flt_right" style="margin-right: 8px;"> Bestellen</a>
                            </span>
                            </p>
                        </div>
                    </li>
                    {% endfor %}
                </ul>
                <div class="clr"></div>
            </div>
    {% else %}
    <div class="products" style="min-height: 388px">
        <p>Keine Produkte in dieser Kategorie vorhanden.</p>
    </div>
    {% endif %}
    <img src="{{ asset('/bundles/ladensiastorewebshop/images/content_divider.png') }}" alt="divider" />
</div>
<script type="text/javascript">
