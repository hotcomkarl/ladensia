                {% if products %}
                    {% for product in products %}
                    <li class="relative">
                        <img src="/uploads/thumbnails/{{ product.image }}" alt="{{ product.name }}" class="product_pic" />
                        <div class="absolute_buy">
                            <h3>{{ product.name }}</h3>
                            <p class="grey">{{ product.featuredDescription|raw }}
                                <a href="{{ path('LadensiaStoreCartBundle_show_cart', {'productId' : product.id}) }}"></a>
                            </p>
                            {# <p><button class="flt_right button_buy" value="{{ product.id }}"></button></p> #}
                            <p class="buy"><span class="price">{{ product.price }}{{ 'currency'|trans({}, 'LadensiaStoreWebshopBundle') }}</span>                      
                            {# <a href="{{ path('LadensiaStoreProductBundle_product_detail', { 'product_uuid' : product.uuid }) }}"><img src="{{ asset('/bundles/ladensiastorewebshop/images/arrow_orange2.gif') }}" alt="arrow" /> Details</a> #}
