                <p>
                {{ posting.detailsShort | raw }} <a href="" class="grey">{{ 'news.more'|trans({}, 'LadensiaStoreWebshopBundle') }}</a>
                </p>
            {% endfor %}
            {% else %}
                <br /><br /><br />{{ 'news.no'|trans({}, 'LadensiaStoreWebshopBundle') }}
            {% endif %}
        </div>
        
