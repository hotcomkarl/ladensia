        <div id="product_box_small">
            <h3>{{ 'product.new'|trans({}, 'LadensiaStoreWebshopBundle') }}</h3>       
            <ul>
                {% for product in newProducts %}
                <li>
                    <a href="{{ path('LadensiaStoreProductBundle_product_detail', { 'product_uuid' : product.uuid }) }}">
