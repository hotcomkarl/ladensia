            {% for posting in news%}
                <h3 class="normal f16 m0" style="width: 100%">{{ posting.heading }}</h3>
                <p class="news_content_short">
                    {# {{ 'news.category'|trans({}, 'LadensiaStoreWebshopBundle') }}: Allgmein |#} {{ 'news.createdAt'|trans({}, 'LadensiaStoreWebshopBundle') }} {{ posting.createdAt }} 
