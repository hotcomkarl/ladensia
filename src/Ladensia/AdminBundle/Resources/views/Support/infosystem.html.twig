{% extends 'LadensiaAdminBundle:Support:index.html.twig' %}

                    {% block support_content %}
                    <div id="grunddaten" class="site">
                        <div class="main-content grid_7 omega">
                            <header>

                                <ul class="action-buttons clearfix fr">
                                    <li><a href="#" class="button button-gray no-text form-new"><span class="add"></span></a>
                                        <div class="overlay-new">
                                            <header class="clearfix"> 
                                                <hgroup>

                                                    <h2>Neue Information anlegen</h2>
                                                </hgroup>
                                            </header>
                                            <section>

                                                <form action="" method="post" {{ form_enctype(form) }} class="form">
                                                    {{ form_errors(form) }}
                                                    <div class="clearfix">
                                                        {{ form_label(form.heading) }}
                                                        {{ form_errors(form.heading) }}
                                                        {{ form_widget(form.heading) }}
                                                    </div>
                                                    <div class="clearfix">
                                                        {{ form_label(form.details) }}
                                                        {{ form_errors(form.details) }}
                                                        {{ form_widget(form.details) }}
                                                    </div>
                                                    {{ form_rest(form) }}
                                                    <div class="action clearfix">
                                                        <button type="submit" class="button button-gray">Neue Information posten</button>
                                                    </div>
                                                </form>

                                            </section>
                                        </div> 
                                    </li>
                                </ul>
                                <h2>Infosystem - News</h2>
                                
                            </header>
                            <section class="clearfix">
                                <table class="datatable tablesort selectable paginate full">
                                    <thead>
                                        <tr>
                                            <th>Heading</th>
                                            <th>Details</th>
                                            <th>Erstellt am</th>
                                            <th style="width: 80px"></th>
                                            <th style="width: 80px"></th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Heading</th>
                                            <th>Details</th>
                                            <th>Erstellt am</th>
                                            <th style="width: 80px"></th>
                                            <th style="width: 80px"></th>
                                        </tr>
                                    </tfoot>

                                    <tbody>
                                        {% if news %}
                                            {% for new in news %}
                                            <tr id="{{ new.id }}" >
                                                    <td>{{ new.heading }}</td>
                                                    <td>{{ new.details }}</td>
                                                    <td>{{ new.createdAt }}</td>
                                                    <td><a href="#" class="confirm-message" onclick="setNewsId('{{ new.id }}')"><img src="{{ asset('admin/images/icons/delete.png') }}" alt="delete" class="cat_del" /></a></td>
                                                    <td><a href=""><img src="{{ asset('admin/images/icons/pencil.png') }}" alt="edit" /></a></td>
                                            </tr>
                                            {% endfor %}
                                        {% else %}
                                        <tr>
                                            <td colspan="5" align="center">Keine Informationen vorhanden</td>
                                        </tr>
                                    {% endif %} 
                                    </tbody>
                                    
                                </table>
                                <div id="dialog-confirm" title="Information löschen?" style="display: none;">
                                        <p><span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;"></span>Diese Information wird dauerhaft gelöscht. Sind Sie sicher?</p>
                                </div>

                                <div id="dialog-success" title="Info gelöscht" style="display: none;">
                                        <p><span class="ui-icon ui-icon-info" style="float:left; margin:0 7px 20px 0;"></span>Die Information wurde erfolgreich gelöscht.</p>
                                </div>

                            </section>
                        </div>
                    </div>
                    {% endblock %}
