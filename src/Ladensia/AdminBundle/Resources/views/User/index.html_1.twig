                    </div>
                    <!-- Forms Section -->
                    <div id="grunddaten" class="site">
                        <div class="main-content grid_7 omega">
                            <header>
                                <h2>Kategorien</h2>
                            </header>
                            <section class="clearfix">
                                <table class="datatable tablesort selectable paginate full">
                                    <thead>
                                        <tr>
                                            <th>Username</th>
                                            <th>Registriert am</th>
                                            <th>Letzter Login</th>
                                            <th style="width: 80px"></th>
                                            <th style="width: 80px"></th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Username</th>
                                            <th>Registriert am</th>
                                            <th>Letzter Login</th>
                                            <th style="width: 80px"></th>
                                            <th style="width: 80px"></th>
                                        </tr>
                                    </tfoot>

                                    <tbody>
                                    {% if users %}
                                        {% for user in users %}
                                        <tr>
                                                <td>{{ user.name }}</td>
                                                <td>{{ user.registerDate|date("m/d/Y") }}</td>
                                                <td>{{ user.lastLogin|date("m/d/Y") }}</td>
                                                <td><a href="javascript:deleteCategory({{ user.id }});"><img src="{{ asset('admin/images/icons/delete.png') }}" alt="delete" class="cat_del" /></a></td>
                                                <td><a href=""><img src="{{ asset('admin/images/icons/pencil.png') }}" alt="edit" /></a></td>
                                        </tr>
                                        {% endfor %}
                                    {% else %}
                                        <tr>
                                            <td colspan="5" align="center">Keine User vorhanden</td>
                                        </tr>
                                    {% endif %}
                                    </tbody>
                                    
                                </table>

                            </section>
                        </div>
                    </div>
                    <!-- End Forms Section -->

                    <!-- Forms Section -->
                    <div id="usergruppen" class="site">
                        <div class="main-content grid_7 omega">
                            <header>
                                <ul class="action-buttons clearfix fr">
                                    <li><a class="modalInput button button-blue" rel="#simpledialog"><span class="add"></span>Speichern</a></li>
                                    <li><a class="modalInput button button-blue" rel="#simpledialog"><span class="delete"></span>Löschen</a></li>
                                </ul>
                                <h2>User Gruppen</h2>
                            </header>
                            <section class="clearfix">
                                <form class="form">
                                    <div class="clearfix">
                                        <label>Gruppenname <em>*</em><small>z.B. Reseller</small></label><input type="text" name="name" required="required" />
                                    </div>
                                    <div class="clearfix">
                                        <label>Rabatt <em>*</em><small>Rabatt auf Produkte</small></label><input type="text" name="name" required="required" />
                                    </div>
                                    <div class="clearfix">
                                        <label>Layout<small>gesondertes Design anzeigen</small></label><select><option>Layout1</option><option>Layout2</option><option>Layout3</option></select>
                                    </div>


                                    <div class="action clearfix">
                                        <button class="button button-gray" type="submit"><span class="accept"></span>OK</button>
                                        <button class="button button-gray" type="reset">Reset</button>
                                    </div>
                                </form>

                            </section>
                        </div>
                    </div>
                    <!-- End Forms Section -->

                    <!-- Forms Section -->
                    <div id="serververwalten" class="site">
                        <div class="main-content grid_7 omega">
                            <header>
                                <ul class="action-buttons clearfix fr" id="navi">
                                    <li><a class="modalInput button button-blue" href="#serveranzeigen"><span class="add"></span>Server Anzeigen</a></li>

                                </ul>
                                <h2>Serververwalten</h2>
                            </header>
                            <section class="clearfix">
                                <form class="form">
                                    <div class="clearfix">
                                        <label>Servername <em>*</em><small>Internerner Servername</small></label><input type="text" name="name" required="required" />
                                    </div>
                                    <div class="clearfix">
                                        <label>Hostname <em>*</em><small>z.B. localhost</small></label><input type="text" name="name" required="required" />
                                    </div>
                                    <div class="clearfix">
                                        <label>IP Adresse <em>*</em><small>z.B. 192.168.123.15</small></label><input type="text" name="name" required="required" />
                                    </div>
                                    <div class="clearfix">
                                        <label>Monatliche Miete <em>*</em><small>Kosten für Ihren Server</small></label><input type="text" name="name" required="required" />
                                    </div>
                                    <div class="clearfix">
                                        <label>Datencenter <em>*</em><small>Wo steht Ihr Server</small></label><input type="text" name="name" required="required" />
                                    </div>
                                    <div class="clearfix">
                                        <label>User <em>*</em><small>Max. Anzahl User begrenzen</small></label><input type="text" name="name" required="required" />
                                    </div>
                                    <div class="clearfix">
                                        <label>Software<small>Installierte Software</small></label><select><option>cPanel</option><option>Plesk</option><option>Kloxo</option></select>
                                    </div>
                                    <div class="clearfix">
                                        <label>Login <em>*</em><small>Server Login Name</small></label><input type="text" name="name" required="required" />
                                    </div>
                                    <div class="clearfix">
                                        <label>Passwort <em>*</em><small>Login Passwort</small></label><input type="password" name="name" required="required" />
                                    </div>
                                    <div class="clearfix">
                                        <label>SSL <em>*</em><small>Verbindung nur per SSL</small></label><input type="checkbox" name="name" required="required" />
                                    </div>


                                    <div class="action clearfix">
                                        <button class="button button-gray" type="submit"><span class="accept"></span>OK</button>
                                        <button class="button button-gray" type="reset">Reset</button>
                                    </div>
                                </form>

                            </section>
                        </div>
                    </div>

                    <!--Server anzeigen-->
                    <div id="serveranzeigen" class="site">
                        <div class="main-content grid_7 omega">
                            <header>
                                <ul class="action-buttons clearfix fr" id="navi">
